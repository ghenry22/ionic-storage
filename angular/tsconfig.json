{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "enableIvy": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "target": "es5",
    "types": ["node"],
    "rootDir": "src"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "scripts"],
  "angularCompilerOptions": {
    "genDir": "aot",
    "compilationMode": "partial"
  }
}
